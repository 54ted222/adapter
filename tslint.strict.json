{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-config-airbnb"
    ],
    "jsRules": {},
    "rules": {
        "interface-name": [
            false,
            "always-prefix"
        ],
        "ordered-imports": [
            false
        ],
        "comment-format": [
            false
        ],
        "no-empty-interface": false,
        "object-literal-sort-keys": false,
        "object-literal-shorthand": false,
        "no-increment-decrement": false,
        "import-name": false,
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore"
        ],
        "ter-indent": [
            true,
            4,
            {
                "SwitchCase": 1,
                "VariableDeclarator": {
                    "var": 0,
                    "let": 0,
                    "const": 0,
                    "export": 0
                }
            }
        ],
        "quotemark": [
            true,
            "double",
            "jsx-double"
        ],
        "max-line-length": [
            true,
            160
        ],
        "member-access": [
            true,
            "check-accessor"
        ],
        "one-line": [
            true,
            "check-catch",
            "check-else",
            "check-finally",
            "check-open-brace",
            "check-whitespace"
        ],
        "trailing-comma": [
            true,
            {
                "singleline": "never",
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "never",
                    "exports": "never",
                    "imports": "never"
                }
            }
        ],
        "no-consecutive-blank-lines": [
            true,
            3
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-type",
            "check-preblock"
        ],
        "object-literal-key-quotes": [
            true,
            "consistent-as-needed"
        ],
        "array-type": [
            true,
            "array"
        ],
        "no-angle-bracket-type-assertion": false,
        "prefer-type-cast": true,
        "ter-prefer-arrow-callback": [
            true,
            {
                "allowNamedFunctions": true
            }
        ],
        "strict-boolean-expressions": [
            true,
            "allow-undefined-union",
            "allow-null-union",
            "allow-string",
            "allow-number"
        ]
    },
    "rulesDirectory": []
}